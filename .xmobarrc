Config { font = "xft:DejaVu Sans Mono:pixelsize=13"
       , bgColor = "black"
       , fgColor = "white"
       , position = TopW L 100
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %l:%M:%S" "date" 1
                    , Run BatteryP ["BAT1"] [] 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %battery%  %cpu%  %memory%  --  %date%"
       }
