# applications

"slock"
    Shift+Mod4 + l

"urxvt -e ranger"
    Mod4 + e

"sudo reboot"
    Shift+Mod4 + r
    
"firefox"
    Shift+Mod4 + b

"scrot -e 'mv $f ~/images/shots'"
    Print

"cap"
    Mod4 + Print

"urxvt -e vim"
    Mod4 + v


# music/sound

"(cmus-remote -u)"
    XF86AudioPlay

"(cmus-remote -n)"
    XF86AudioNext

"(cmus-remote -r)"
    XF86AudioPrev

"(cmus-remote -s)"
    XF86AudioStop

"amixer set Master 1-"
    XF86AudioLowerVolume

"amixer set Master 1+"
    XF86AudioRaiseVolume

# "mpc next"
"(cmus-remote -n)"
    Control + period

# "mpc prev"
"(cmus-remote -r)"
    Control + comma
